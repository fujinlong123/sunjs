
@import 'style/weui.wxss';

/**app.wxss**/

page{
   height:100%;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.btn {
  height: 90rpx;
  margin-top: 4rpx;
  border-radius: 8rpx;
  color: #fff;
  border: 2rpx solid #d7d7d7;
  line-height:90rpx;
}

.btn-group {
  margin-top: 4rpx;
  display: flex;
}

.btn-group .btn {
  margin-top: 0rpx;
  margin-left: 4rpx;
}
.btn-group .icon {
  margin-top: 0rpx;
  margin-left: 4rpx;
}
.btn-group .icon:first-child {
  margin-left: 0rpx;
}

.btn-group .btn:first-child {
  margin-left: 0rpx;
}

.btn-group .input {
  border: 2rpx solid #d7d7d7;
  border-radius: 8rpx;
  background-color: #FAFFBD;
  height: 86rpx;
}
.flex-grow-1 {
  flex-grow: 1;
}
.width-200 {
  width: 200rpx;
}
